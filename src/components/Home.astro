---
import { Image } from "astro:assets";
import me from "../images/me.jpg";
import { Button } from "./ui/button";
import Wave from '@/components/Wave.astro'
---

<div class="p-7 sm:grid md:flex justify-center items-center">
  <div class="pt-8 md:pr-7 text-center md:text-left">
    <div>
      <div>
        <h2 class="text-4xl md:text-6xl pb-3">
          Code is <span class="text-teal-500">art</span>.
        </h2>
      </div>

      <div>
        <h2 class="text-4xl md:text-6xl">That does magic</h2>
      </div>
    </div>

    <p class="text-xl md:text-2xl pt-5">
      Always striving to write clean code.
    </p>
    <p class="text-xl md:text-2xl md:pt-2">And I love what I do.</p>
    <a href="/contact">
      <Button className="mt-5">Contact me</Button></a>
  </div>

  <div class="md:pl-4 pt-12 text-center">
    <div>
      <Image src={me} width={400} height={500} alt="picture of enaya" />
    </div>
    <Wave />
  </div>
</div>
<div>
  <div class="flex mt-36 justify-around">
    <!-- icons -->
  </div>
</div>