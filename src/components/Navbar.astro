---
import { ModeToggle } from "./ModeToggle";
const as = [
    { id: 1, url: "/", text: "Home" },
    { id: 2, url: "/projects", text: "Projects" },
    { id: 3, url: "/contact", text: "Contact" },
  ];
---

<nav class="md:flex p-8 justify-between items-center">
  <h1 class="logo font-mono text-2xl md:text-3xl">
    <a href="/">
      Ahmad Enaya
    </a>
  </h1>
  <!-- <div
    class={`flex justify-end -mt-8 md:hidden text-3xl cursor-pointer`}
  >
  </div> -->
  <ul
    class="md:flex text-center md:visible"
  >
    <li class="md:px-5 cursor-pointer"><ModeToggle client:load /></li>
    {as.map(l => {
      const { url, text } = l;
      return (
        <li
          class="md:px-5 pt-8 md:pt-1 cursor-pointer text-xl"
        >
          <a href={url} class="hover:text-teal-500">
            {text}
          </a>
        </li>
      );
    })}
  </ul>
</nav>